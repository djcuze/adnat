<%= form_for form, url: organisations_path, remote: true do |f| %>
  <div id="form-errors"></div>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, value: form.name %>
  </div>

  <div class="form-group">
    <%= f.label :hourly_rate %>
    $<%= f.number_field :hourly_rate, value: form.hourly_rate, step: '0.01' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Create and Join' %>
  </div>
<% end %>
