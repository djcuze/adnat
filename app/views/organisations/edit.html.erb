<h1>Edit organisation</h1>
<%= form_for @facade.form, url: organisation_path, method: :put do |f| %>
  <div id="form-errors"></div>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, value: @facade.form.name %>
  </div>

  <div class="form-group">
    <%= f.label :hourly_rate_in_cents %>
    $<%= f.number_field :hourly_rate_in_cents, value: @facade.form.hourly_rate_in_cents, step: '0.01' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Save changes' %>
  </div>
<% end %>
